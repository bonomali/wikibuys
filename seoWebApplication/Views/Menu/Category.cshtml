@model IEnumerable<seoWebApplication.Models.Categories>
 
            @foreach (var item in Model)
            {
                <li class="has-dropdown">
                    <a href="/Category/@Linkor.GenerateSlug(item.Name.ToString())" title="@Html.DisplayFor(modelItem => item.Description)">@Html.DisplayFor(modelItem => item.Name)</a>
                    <ul class="dropdown">
                        @{Html.RenderAction("Subcategory", "Menu", new { id = item.Name });}
                    </ul>
                </li>
            }
       
